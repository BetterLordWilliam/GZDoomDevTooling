{
  "name": "gzdoomdevtooling",
  "displayName": "GZDoomDevTooling",
  "description": "Tooling for GZDoom development (test)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zscript",
        "aliases": [ "ZScript", "zscript" ],
        "extensions": [ ".zs", ".zsc" ],
        "configuration": "./language_configurations/zscript_configuration.json",
        "mimetypes": [ "text/x-zscript" ],
        "icon": {
          "light": "./images/zscript-icon-light.png",
          "dark": "./images/zscript-icon-dark.png"
        }
      },
      {
        "id": "lump",
        "aliases": [ "lump", "Lump", "LUMP" ],
        "extensions": [ ".lmp", ".lump" ],
        "icon": {
          "light": "./images/lump-icon-light.png",
          "dark": "./images/lump-icon-dark.png"
        }
      }
    ],
    "configuration": {
      "title": "GZDoom Dev Tooling",
      "type": "object",
      "properties": {
        "gzdoomdevtooling.gzdoomenginepath": {
          "type": "string",
          "default": "",
          "description": "Path to the GZDoom engine executable."
        },
        "gzdoomdevtooling.launchargs": {
          "type": "string",
          "default": "",
          "description": "Additional command line arguments to pass when launching GZDoom."
        }
      }
    },
    "commands": [{
      "command": "gzdoomdevtooling.getEnginePath",
      "title": "GZDoom Dev Tooling: Retrieve GZDoom Engine Path"
    },
    {
      "command": "gzdoomdevtooling.setEnginePath",
      "title": "GZDoom Dev Tooling: Set GZDoom Engine Path"
    },
    {
      "command": "gzdoomdevtooling.launchGZDoom",
      "title": "GZDoom Dev Tooling: Launch GZDoom"
    }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
